{
    "compilerOptions": {
        "module":"amd",
        "noImplicitAny": false,
        "target": "es5",
        "rootDir": "src",
        "outDir": "dist",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "baseUrl": "./src",
        "paths": {
            "src/*":["src/*"]
        },
        "experimentalDecorators": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./typings/index.d.ts",
        "./jspm_packages/**/*.d.ts"
    ],
    "files": [
        "./typings/index.d.ts"
    ],
    "exclude": [
        "node_modules",
        "jspm_packages",
        "dist",
        "build"
    ],
    "include": [
        "src/**/*",
        "./typings/index.d.ts"
    ]
}