{
    "compilerOptions": {
        "module":"commonjs",
        "noImplicitAny": false,
        "target": "es2015",
        "rootDir": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "baseUrl": "./src",
        "paths": {
            "configs":["../configs/config"],
            "src/*": ["src/*"]
        },
        "experimentalDecorators": true,
        "lib": ["dom", "es2015"]
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ],
    "include": [
        "src/**/*",
        "configs/config.ts",
        "typings/index.d.ts",
        "jspm_packages/**/*.d.ts"
    ]
}