{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "target": "es2015",
        "rootDir": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "removeComments": false,
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "configs": [
                "../configs/configs"
            ],
            "src/*": [
                "src/*"
            ]
        },
        "sourceMap": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ]
    },
    "exclude": [
        "jspm_packages",
        "node_modules",
        "dist",
        "build"
    ],
    "include": [
        "src/**/*",
        "configs/config.ts",
        "typings/index.d.ts",
        "jspm_packages/**/*.d.ts"
    ]
}